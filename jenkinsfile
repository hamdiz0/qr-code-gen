def gscript
pipeline{
    agent any
    tools {
        nodejs "nodejs-22.9"
    }
    stages{
        stage("init"){
            steps{
                gscript = load "script.groovy"
            }
        }
        stage("build-front"){
            steps{
                gscript.front_build()
            }
        }
        stage("build-api"){
            steps{
                gscript.back_build()
            }
        }    
    }
}