def gscript
pipeline{
    agent any
    stages{
        stage("init"){
            steps{
                script{gscript = load "script.groovy"}
            }
        }
        stage("build-front"){
            steps{
                script{gscript.front_build()}
            }
        }
        stage("build-api"){
            steps{
                script{gscript.back_build()}
            }
        }    
    }
}
