def gscript

pipeline{
    agent any
    stages{
        stage("init"){
            steps{
                script{gscript = load "script.groovy"}
            }
        }
        stage("build-front"){
            steps{
                script{gscript.image_build('hamdiz0/qr-front','1.0','docker-repo','./front')}
            }
        }
        stage("build-api"){
            steps{
                script{gscript.image_build('hamdiz0/qr-api','1.0','docker-repo','./api')}
            }
        }
        stage("build-db"){
            steps{
                script{gscript.image_build('hamdiz0/qr-db','1.0','docker-repo','./db')}
            }
        }   
    }
}
